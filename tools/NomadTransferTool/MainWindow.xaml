<Window x:Class="NomadTransferTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Nomad Media Transfer Tool" Height="500" Width="700"
        Background="#1e1e1e" Foreground="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:BooleanToColorConverter xmlns:local="clr-namespace:NomadTransferTool" x:Key="BooleanToColorConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#eeeeee"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#555555" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#3a3a3a" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Nomad Media Transfer Tool" FontSize="24" FontWeight="Bold" Foreground="#ff4081"/>
                <TextBlock Text="Manage external drives and transfer media effortlessly." Foreground="#bbbbbb"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="OMDb Key:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#cccccc"/>
                <PasswordBox x:Name="OmdbKeyBox" Width="150" Background="#333333" Foreground="White" 
                             BorderBrush="#444444" PasswordChanged="OmdbKeyBox_PasswordChanged"/>
            </StackPanel>
        </Grid>

        <Separator Grid.Row="1" Background="#444" Margin="0,0,0,15"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Drive List -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Connected USB Drives" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <ListBox x:Name="DriveList" ItemsSource="{Binding Drives}" Height="200" 
                         Background="#252525" BorderBrush="#444" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="13" Foreground="White"/>
                                    <TextBlock Text="{Binding Name}" FontSize="10" Foreground="#999"/>
                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="11" Foreground="#ccc"/>
                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11" FontWeight="Medium"
                                               Foreground="{Binding IsMounted, Converter={StaticResource BooleanToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <UniformGrid Columns="2" Margin="0,10,0,0">
                    <Button Content="Prepare Folders" Click="PrepareDrive_Click" Margin="2"/>
                    <Button Content="Format Drive" Click="FormatDrive_Click" Background="#d32f2f" Margin="2"/>
                    <Button Content="Mount to Pi" Click="MountDrive_Click" Margin="2"/>
                    <Button Content="Unmount" Click="Unmount_Click" Margin="2"/>
                </UniformGrid>
            </StackPanel>

            <!-- Transfer Area -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0">
                <TextBlock Text="Transfer Files" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                
                <TextBlock Text="1. Select Category" Margin="0,5" Foreground="#ccc"/>
                <ComboBox x:Name="CategoryCombo" SelectedIndex="0" Background="#333" Foreground="White" BorderBrush="#444">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="Movies" Tag="movies"/>
                    <ComboBoxItem Content="TV Shows" Tag="shows"/>
                    <ComboBoxItem Content="Music" Tag="music"/>
                    <ComboBoxItem Content="Books" Tag="books"/>
                    <ComboBoxItem Content="Gallery" Tag="gallery"/>
                    <ComboBoxItem Content="General Files" Tag="files"/>
                </ComboBox>

                <TextBlock Text="2. Drag &amp; Drop Files Below" Margin="0,15,0,5" Foreground="#ccc"/>
                <Border Background="#252525" BorderBrush="#ff4081" BorderThickness="2" 
                        CornerRadius="8" Height="120" AllowDrop="True" Drop="Transfer_Drop">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¥" FontSize="40" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop media files here" HorizontalAlignment="Center" Foreground="#999"/>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Note: Files are organized by OMDb data. Movies get folders + posters automatically." 
                           FontSize="10" Foreground="#888" Margin="0,10" TextWrapping="Wrap"/>
            </StackPanel>
        </Grid>

        <!-- Progress Area -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0" Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}">
            <Grid Margin="0,0,0,5">
                <TextBlock x:Name="StatusText" Text="{Binding CurrentStatus}" Foreground="#eee"/>
                <TextBlock x:Name="SpeedText" Text="{Binding TransferSpeed}" HorizontalAlignment="Right" Foreground="#aaa"/>
            </Grid>
            <ProgressBar x:Name="MainProgress" Height="15" Value="{Binding TotalProgress}" 
                         Background="#333" Foreground="#ff4081" BorderThickness="0"/>
            <TextBlock x:Name="FileProgressText" Text="{Binding FileProgress}" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
        </StackPanel>

        <!-- Footer -->
        <StatusBar Grid.Row="4" Background="Transparent" Foreground="#666" Margin="0,5,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding AppStatus}"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>
