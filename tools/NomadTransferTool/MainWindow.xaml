<Window x:Class="NomadTransferTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NomadTransferTool"
        Title="Nomad Media Transfer Tool" Height="650" Width="1000"
        Background="#1e1e1e" Foreground="White">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#eeeeee"/>
        </Style>
        
        <Style TargetType="Button">
            <Setter Property="Background" Value="#3a3a3a"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#555555" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" To="#3a3a3a" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Nomad Media Transfer Tool" FontSize="24" FontWeight="Bold" Foreground="#ff4081"/>
                <TextBlock Text="Manage external drives and transfer media effortlessly." Foreground="#bbbbbb"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="OMDb Key:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#cccccc"/>
                <PasswordBox x:Name="OmdbKeyBox" Width="150" Background="#333333" Foreground="White" 
                             BorderBrush="#444444" PasswordChanged="OmdbKeyBox_PasswordChanged"/>
            </StackPanel>
        </Grid>

        <Separator Grid.Row="1" Background="#444" Margin="0,0,0,15"/>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="250"/>
            </Grid.ColumnDefinitions>

            <!-- Drive List -->
            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                <TextBlock Text="Connected USB Drives" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <ListBox x:Name="DriveList" ItemsSource="{Binding Drives}" Height="200" 
                         Background="#252525" BorderBrush="#444" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border BorderBrush="#333" BorderThickness="0,0,0,1" Padding="5">
                                <StackPanel>
                                    <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="13" Foreground="White"/>
                                    <TextBlock Text="{Binding Name}" FontSize="10" Foreground="#999"/>
                                    <TextBlock Text="{Binding SizeDisplay}" FontSize="11" Foreground="#ccc"/>
                                    <TextBlock Text="{Binding StatusDisplay}" FontSize="11" FontWeight="Medium"
                                               Foreground="{Binding IsMounted, Converter={StaticResource BooleanToColorConverter}}"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <UniformGrid Columns="2" Margin="0,10,0,0">
                    <Button Content="Prepare Folders" Click="PrepareDrive_Click" Margin="2"/>
                    <Button Content="Format Drive" Click="FormatDrive_Click" Background="#d32f2f" Margin="2"/>
                </UniformGrid>

                <StackPanel Margin="0,20,0,0" Visibility="{Binding IsHandbrakeAvailable, Converter={StaticResource InverseBoolToVis}}">
                    <TextBlock Text="Handbrake CLI Missing" Foreground="#ffab00" FontWeight="Bold" HorizontalAlignment="Center"/>
                    <Button Content="Download Handbrake" Click="DownloadHandbrake_Click" Margin="5" Background="#ffab00" Foreground="Black"/>
                </StackPanel>
            </StackPanel>

            <!-- Transfer Area -->
            <StackPanel Grid.Column="1" Margin="10,0,10,0">
                <TextBlock Text="Transfer Files" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                
                <TextBlock Text="1. Select Category" Margin="0,5" Foreground="#ccc"/>
                <ComboBox x:Name="CategoryCombo" SelectedIndex="0" Background="#333" Foreground="White" BorderBrush="#444">
                    <ComboBox.Resources>
                        <Style TargetType="ComboBoxItem">
                            <Setter Property="Background" Value="#333"/>
                            <Setter Property="Foreground" Value="White"/>
                        </Style>
                    </ComboBox.Resources>
                    <ComboBoxItem Content="Movies" Tag="movies"/>
                    <ComboBoxItem Content="TV Shows" Tag="shows"/>
                    <ComboBoxItem Content="Music" Tag="music"/>
                    <ComboBoxItem Content="Books" Tag="books"/>
                    <ComboBoxItem Content="Gallery" Tag="gallery"/>
                    <ComboBoxItem Content="General Files" Tag="files"/>
                </ComboBox>

                <TextBlock Text="2. Select Options" Margin="0,15,0,5" Foreground="#ccc"/>
                <CheckBox x:Name="HandbrakeCheck" Content="Transcode with Handbrake (Save Space)" 
                          IsEnabled="{Binding IsHandbrakeAvailable}"
                          Foreground="#eee" Margin="0,2"/>
                <CheckBox x:Name="AutoMoveCheck" Content="Auto-Move to USB (Delete temp files)" 
                          IsChecked="True" Foreground="#eee" Margin="0,2"/>

                <TextBlock Text="3. Select Files or Folders" Margin="0,15,0,5" Foreground="#ccc"/>
                <UniformGrid Columns="2" Margin="0,0,0,10">
                    <Button Content="Select Files" Click="SelectFiles_Click" Margin="2"/>
                    <Button Content="Select Folder" Click="SelectFolder_Click" Margin="2"/>
                </UniformGrid>
                
                <Border Background="#252525" BorderBrush="#ff4081" BorderThickness="2" 
                        CornerRadius="8" Height="120" AllowDrop="True" Drop="Transfer_Drop">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <TextBlock Text="ðŸ“¥" FontSize="32" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drop Files or Folders" FontWeight="Bold" HorizontalAlignment="Center" Foreground="White"/>
                        <TextBlock Text="Recursively processed" FontSize="11" HorizontalAlignment="Center" Foreground="#999"/>
                    </StackPanel>
                </Border>
                
                <TextBlock Text="Note: Movies get folders + posters automatically. TV Shows organized by series name." 
                           FontSize="10" Foreground="#888" Margin="0,10" TextWrapping="Wrap"/>
            </StackPanel>

            <!-- Transcode Queue Area -->
            <StackPanel Grid.Column="2" Margin="10,0,0,0">
                <TextBlock Text="Transcode Queue" FontWeight="Bold" Margin="0,0,0,10" Foreground="White"/>
                <ListBox x:Name="QueueList" ItemsSource="{Binding TranscodeQueue}" Height="300" 
                         Background="#252525" BorderBrush="#444" Foreground="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" FontSize="11" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Margin="2"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <TextBlock Text="{Binding TranscodeQueue.Count, StringFormat='Items in queue: {0}'}" 
                           HorizontalAlignment="Right" FontSize="11" Foreground="#999" Margin="0,5"/>
            </StackPanel>
        </Grid>

        <!-- Bottom Area -->
        <StackPanel Grid.Row="3" Margin="0,10,0,0">
            <!-- Progress Area -->
            <StackPanel Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}">
                <Grid Margin="0,0,0,5">
                    <TextBlock x:Name="StatusText" Text="{Binding CurrentStatus}" Foreground="#eee" FontWeight="Bold"/>
                    <TextBlock x:Name="SpeedText" Text="{Binding TransferSpeed}" HorizontalAlignment="Right" Foreground="#aaa"/>
                </Grid>
                
                <ProgressBar x:Name="FileProgressBar" Height="8" Value="{Binding CurrentFileProgress}" 
                             Background="#333" Foreground="#4caf50" BorderThickness="0" Margin="0,0,0,5"/>
                
                <ProgressBar x:Name="MainProgress" Height="15" Value="{Binding TotalProgress}" 
                             Background="#333" Foreground="#ff4081" BorderThickness="0"/>
                
                <TextBlock x:Name="FileProgressText" Text="{Binding FileProgress}" FontSize="11" Foreground="#888" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- Footer -->
            <StatusBar Background="Transparent" Foreground="#666" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock Text="{Binding AppStatus}"/>
                </StatusBarItem>
            </StatusBar>
        </StackPanel>
    </Grid>
</Window>
