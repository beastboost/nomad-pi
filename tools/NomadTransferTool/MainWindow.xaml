<Window x:Class="NomadTransferTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:NomadTransferTool"
        Title="Nomad Media Transfer Tool" Height="650" Width="1000"
        Background="#1e1e1e" Foreground="White">
    <Window.Resources>
        <SolidColorBrush x:Key="DangerColor" Color="#f44336"/>
        <local:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:InverseBooleanToVisibilityConverter x:Key="InverseBoolToVis"/>
        <local:CountToVisibilityConverter x:Key="CountToVisibilityConverter"/>
        <local:BooleanToColorConverter x:Key="BooleanToColorConverter"/>
        <local:CategoryToVisibilityConverter x:Key="CategoryToVis"/>
        <local:IsVideoToVisibilityConverter x:Key="IsVideoToVis"/>
        <local:VideoTranscodeVisibilityConverter x:Key="VideoTranscodeVis"/>
        
        <!-- Modern Colors -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF4081"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#4caf50"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#121212"/>
        <SolidColorBrush x:Key="CardColor" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="BorderColor" Color="#333333"/>
        <SolidColorBrush x:Key="TextColor" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="MutedTextColor" Color="#9E9E9E"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="FontFamily" Value="Segoe UI, Roboto, sans-serif"/>
        </Style>

        <Style x:Key="HeaderBlock" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryColor}"/>
        </Style>

        <Style x:Key="CardBorder" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Margin" Value="5"/>
        </Style>

        <Style TargetType="Button">
            <Setter Property="Background" Value="#2D2D2D"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#3D3D3D"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#4D4D4D"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="12,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#F50057"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#C51162"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#1A1A1A"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        </Style>

        <Style x:Key="QueueItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Padding="{TemplateBinding Padding}" SnapsToDevicePixels="true">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="CheckBox">
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Nomad Media Transfer Tool" FontSize="28" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}"/>
                <TextBlock Text="Manage external drives and transcode media for your server" FontSize="14" Foreground="{StaticResource MutedTextColor}" Margin="0,5,0,0"/>
            </StackPanel>
            
            <Border Grid.Column="1" Background="{StaticResource CardColor}" CornerRadius="8" Padding="15,10" VerticalAlignment="Center">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="OMDb API Key" VerticalAlignment="Center" Margin="0,0,15,0" FontWeight="SemiBold"/>
                    <PasswordBox x:Name="OmdbKeyBox" Width="180" Height="32" 
                                 Background="#252525" Foreground="White" BorderBrush="{StaticResource BorderColor}"
                                 VerticalContentAlignment="Center" Padding="5,0"
                                 PasswordChanged="OmdbKeyBox_PasswordChanged"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>

            <!-- Column 1: Drives -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                
                <Border Grid.Row="0" Style="{StaticResource CardBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Connected Drives" Style="{StaticResource HeaderBlock}"/>
                        
                        <ListBox Grid.Row="1" x:Name="DriveList" ItemsSource="{Binding Drives}" Margin="0,0,0,15" SelectionChanged="DriveList_SelectionChanged">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="10,8">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="ðŸ’¾" FontSize="24" VerticalAlignment="Center" Margin="0,0,15,0"/>
                                            <StackPanel Grid.Column="1">
                                                <TextBlock Text="{Binding Label}" FontWeight="Bold" FontSize="14"/>
                                                <TextBlock Text="{Binding Name}" FontSize="11" Foreground="{StaticResource MutedTextColor}"/>
                                                <ProgressBar Value="{Binding PercentUsed}" Height="4" Margin="0,5" Background="#333" Foreground="{StaticResource PrimaryColor}" BorderThickness="0"/>
                                                <TextBlock Text="{Binding SizeDisplay}" FontSize="12" Margin="0,2"/>
                                                <TextBlock Text="{Binding StatusDisplay}" FontSize="12" FontWeight="Bold"
                                                           Foreground="{Binding IsMounted, Converter={StaticResource BooleanToColorConverter}}"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <StackPanel Grid.Row="2">
                            <UniformGrid Columns="2">
                                <Button Content="Prepare Folders" Click="PrepareDrive_Click" Margin="0,0,5,0"/>
                                <Button Content="Format (exFAT)" Click="FormatDrive_Click" Background="#d32f2f" Margin="5,0,0,0"/>
                            </UniformGrid>
                            
                            <Border Margin="0,15,0,0" Padding="15" Background="#2A2A2A" CornerRadius="8" 
                                    Visibility="{Binding IsHandbrakeAvailable, Converter={StaticResource InverseBoolToVis}}">
                                <StackPanel>
                                    <TextBlock Text="Handbrake CLI Missing" Foreground="#ffab00" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>
                                    <Button Content="Download Handbrake" Click="DownloadHandbrake_Click" Background="#ffab00" Foreground="Black" Style="{StaticResource PrimaryButton}"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Activity Logs -->
                <Border Grid.Row="1" Style="{StaticResource CardBorder}" Margin="5,15,5,5">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBlock Text="Activity Logs" Style="{StaticResource HeaderBlock}"/>
                        <ListBox Grid.Row="1" ItemsSource="{Binding ProcessingLogs}" Background="Transparent" BorderThickness="0" FontSize="11">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Foreground="{StaticResource MutedTextColor}" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Border>
            </Grid>

            <!-- Column 2: Transfer & Options -->
            <Grid Grid.Column="1" Margin="10,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="1" Style="{StaticResource CardBorder}" x:Name="DropZone" AllowDrop="True" 
                        Drop="Transfer_Drop" DragOver="DropZone_DragOver" Background="#1E1E1E" BorderThickness="2" BorderBrush="{StaticResource PrimaryColor}">
                    <Grid>
                        <!-- Drop Message -->
                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" 
                                    Visibility="{Binding ReviewQueue.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=0}">
                            <TextBlock Text="ðŸ“" FontSize="64" HorizontalAlignment="Center" Opacity="0.5"/>
                            <TextBlock Text="Drop Media Files Here" FontSize="20" FontWeight="Bold" Margin="0,10,0,5" Opacity="0.8"/>
                            <TextBlock Text="Movies, TV Shows, Music, Books, or Photos" FontSize="12" Opacity="0.6"/>
                        </StackPanel>

                        <!-- Review Queue -->
                        <Grid Visibility="{Binding ReviewQueue.Count, Converter={StaticResource CountToVisibilityConverter}, ConverterParameter=1}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Review Media Details" Style="{StaticResource HeaderBlock}"/>
                                <Button Grid.Column="1" Content="Clear All" Click="ClearReviewQueue_Click" 
                                        Background="Transparent" BorderThickness="0" Foreground="{StaticResource MutedTextColor}" 
                                        VerticalAlignment="Center" Margin="0,0,10,0" Cursor="Hand">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Opacity" Value="0.7"/>
                                            <Style.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Opacity" Value="1.0"/>
                                                    <Setter Property="Foreground" Value="{StaticResource DangerColor}"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </Grid>
                            
                            <ListBox Grid.Row="1" ItemsSource="{Binding ReviewQueue}" Background="Transparent" BorderThickness="0" SelectionMode="Extended" x:Name="ReviewListBox">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="{StaticResource BorderColor}" BorderThickness="0,0,0,1" Padding="10">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/> <!-- Warning -->
                                                    <ColumnDefinition Width="*"/>    <!-- Title/Progress -->
                                                    <ColumnDefinition Width="60"/>   <!-- Year -->
                                                    <ColumnDefinition Width="40"/>   <!-- S -->
                                                    <ColumnDefinition Width="40"/>   <!-- E -->
                                                    <ColumnDefinition Width="100"/>  <!-- Category -->
                                                    <ColumnDefinition Width="120"/>  <!-- Preset -->
                                                    <ColumnDefinition Width="80"/>   <!-- Size -->
                                                    <ColumnDefinition Width="120"/>  <!-- Audio -->
                                                    <ColumnDefinition Width="120"/>  <!-- Subs -->
                                                    <ColumnDefinition Width="40"/>   <!-- Actions -->
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="âš ï¸" Foreground="#FFC107" VerticalAlignment="Center" Margin="0,0,10,0" 
                                                           Visibility="{Binding IsDuplicate, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                           ToolTip="This file already exists on the target drive and will be overwritten."/>
                                                
                                                <StackPanel Grid.Column="1" Margin="0,0,10,0">
                                                    <TextBlock Text="Title" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <TextBox Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" Background="#2D2D2D" Foreground="White" BorderThickness="0,0,0,1"/>
                                                    
                                                    <!-- Item Progress -->
                                                    <Grid Margin="0,5,0,0" Visibility="{Binding IsProcessing, Converter={StaticResource BoolToVis}}">
                                                        <ProgressBar Value="{Binding Progress}" Height="4" Background="#333" Foreground="{StaticResource PrimaryColor}" BorderThickness="0"/>
                                                        <TextBlock Text="{Binding StatusMessage}" FontSize="9" Foreground="White" HorizontalAlignment="Right" Margin="0,-12,0,0"/>
                                                    </Grid>
                                                    <TextBlock Text="{Binding StatusMessage}" FontSize="9" Foreground="{StaticResource SecondaryColor}" 
                                                               Visibility="{Binding IsProcessing, Converter={StaticResource InverseBoolToVis}}"
                                                               Margin="0,2,0,0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="2" Margin="0,0,10,0">
                                                    <TextBlock Text="Year" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <TextBox Text="{Binding Year, UpdateSourceTrigger=PropertyChanged}" Background="#2D2D2D" Foreground="White" BorderThickness="0,0,0,1"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="3" Margin="0,0,5,0" Visibility="{Binding Category, Converter={StaticResource CategoryToVis}, ConverterParameter=shows}">
                                                    <TextBlock Text="S" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <TextBox Text="{Binding Season, UpdateSourceTrigger=PropertyChanged}" Background="#2D2D2D" Foreground="White" BorderThickness="0,0,0,1"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="4" Margin="0,0,10,0" Visibility="{Binding Category, Converter={StaticResource CategoryToVis}, ConverterParameter=shows}">
                                                    <TextBlock Text="E" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <TextBox Text="{Binding Episode, UpdateSourceTrigger=PropertyChanged}" Background="#2D2D2D" Foreground="White" BorderThickness="0,0,0,1"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="5" Margin="0,0,10,0">
                                                    <TextBlock Text="Category" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <ComboBox SelectedValue="{Binding Category}" SelectedValuePath="Tag" Background="#2D2D2D" Foreground="White" BorderThickness="0">
                                                        <ComboBoxItem Content="movies" Tag="movies"/>
                                                        <ComboBoxItem Content="shows" Tag="shows"/>
                                                        <ComboBoxItem Content="music" Tag="music"/>
                                                        <ComboBoxItem Content="books" Tag="books"/>
                                                        <ComboBoxItem Content="gallery" Tag="gallery"/>
                                                        <ComboBoxItem Content="files" Tag="files"/>
                                                    </ComboBox>
                                                </StackPanel>

                                                <StackPanel Grid.Column="6" Margin="0,0,10,0">
                                                    <StackPanel.Visibility>
                                                        <MultiBinding Converter="{StaticResource VideoTranscodeVis}">
                                                            <Binding Path="IsVideo"/>
                                                            <Binding Path="DataContext.IsTranscodingEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </StackPanel.Visibility>
                                                    <TextBlock Text="Quality" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <ComboBox ItemsSource="{Binding DataContext.EncodingPresets, RelativeSource={RelativeSource AncestorType=Window}}" 
                                                              SelectedItem="{Binding SelectedPreset}" DisplayMemberPath="Name" 
                                                              Background="#2D2D2D" Foreground="White" BorderThickness="0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="7" Margin="0,0,10,0">
                                                    <StackPanel.Visibility>
                                                        <MultiBinding Converter="{StaticResource VideoTranscodeVis}">
                                                            <Binding Path="IsVideo"/>
                                                            <Binding Path="DataContext.IsTranscodingEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </StackPanel.Visibility>
                                                     <TextBlock Text="Est. Size" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                     <TextBlock Text="{Binding EstimatedSizeDisplay}" VerticalAlignment="Center" FontWeight="SemiBold"/>
                                                 </StackPanel>

                                                <StackPanel Grid.Column="8" Margin="0,0,10,0">
                                                    <StackPanel.Visibility>
                                                        <MultiBinding Converter="{StaticResource VideoTranscodeVis}">
                                                            <Binding Path="IsVideo"/>
                                                            <Binding Path="DataContext.IsTranscodingEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </StackPanel.Visibility>
                                                    <TextBlock Text="Audio" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                    <ComboBox ItemsSource="{Binding AudioTracks}" SelectedItem="{Binding SelectedAudioTrack}" DisplayMemberPath="Display" 
                                                              Background="#2D2D2D" Foreground="White" BorderThickness="0"/>
                                                </StackPanel>

                                                <StackPanel Grid.Column="9" Margin="0,0,10,0">
                                                    <StackPanel.Visibility>
                                                        <MultiBinding Converter="{StaticResource VideoTranscodeVis}">
                                                            <Binding Path="IsVideo"/>
                                                            <Binding Path="DataContext.IsTranscodingEnabled" RelativeSource="{RelativeSource AncestorType=Window}"/>
                                                        </MultiBinding>
                                                    </StackPanel.Visibility>
                                                     <TextBlock Text="Subs" FontSize="10" Foreground="{StaticResource MutedTextColor}"/>
                                                     <ComboBox ItemsSource="{Binding SubtitleTracks}" SelectedItem="{Binding SelectedSubtitleTrack}" DisplayMemberPath="Display" 
                                                               Background="#2D2D2D" Foreground="White" BorderThickness="0"/>
                                                 </StackPanel>

                                                <Button Grid.Column="10" Content="âœ•" Click="RemoveFromQueue_Click" 
                                                        Background="Transparent" Foreground="#888" FontSize="14" FontWeight="Bold" 
                                                        VerticalAlignment="Center" HorizontalAlignment="Center" Cursor="Hand"
                                                        ToolTip="Remove from queue">
                                                    <Button.Style>
                                                        <Style TargetType="Button">
                                                            <Setter Property="Opacity" Value="0.5"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Opacity" Value="1.0"/>
                                                                    <Setter Property="Foreground" Value="#f44336"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                             </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Border Grid.Row="2" x:Name="DetailsPanel" Background="#333333" Padding="15" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0" 
                                    Visibility="{Binding SelectedItem, ElementName=ReviewListBox, Converter={StaticResource NullToVisibilityConverter}}">
                                <StackPanel>
                                    <TextBlock Text="Media Preview" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Width="80" Height="120" Background="#444444" Margin="0,0,15,0" CornerRadius="4">
                                            <TextBlock Text="Poster" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#666666"/>
                                        </Border>
                                        <StackPanel Grid.Column="1">
                                            <TextBlock Text="{Binding SelectedItem.Title, ElementName=ReviewListBox}" FontSize="16" FontWeight="Bold" Foreground="White"/>
                                            <TextBlock Text="{Binding SelectedItem.Year, ElementName=ReviewListBox}" Foreground="{StaticResource MutedTextColor}" Margin="0,0,0,5"/>
                                            <TextBlock Text="{Binding SelectedItem.Plot, ElementName=ReviewListBox}" Foreground="White" TextWrapping="Wrap" MaxHeight="60" Opacity="0.8"/>
                                        </StackPanel>
                                    </Grid>
                                </StackPanel>
                            </Border>

                            <Border Grid.Row="3" Background="#252525" Padding="10" BorderBrush="{StaticResource BorderColor}" BorderThickness="0,1,0,0">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Bulk Action:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12" Foreground="{StaticResource MutedTextColor}"/>
                                        <ComboBox x:Name="BulkCategoryCombo" Width="100" Margin="0,0,5,0">
                                            <ComboBoxItem Content="movies" Tag="movies"/>
                                            <ComboBoxItem Content="shows" Tag="shows"/>
                                            <ComboBoxItem Content="music" Tag="music"/>
                                            <ComboBoxItem Content="books" Tag="books"/>
                                            <ComboBoxItem Content="gallery" Tag="gallery"/>
                                            <ComboBoxItem Content="files" Tag="files"/>
                                        </ComboBox>
                                        <Button Content="Apply" Click="ApplyBulkCategory_Click" Padding="10,2" Margin="0,0,10,0"/>
                                        <Button Content="Clean Titles" Click="BulkCleanTitles_Click" Padding="10,2" Background="#3D3D3D"
                                                ToolTip="Remove dots, underscores, and common release tags from selected titles."/>
                                    </StackPanel>
                                    <Button Grid.Column="1" Content="Start Processing" Click="StartProcessing_Click" 
                                            Style="{StaticResource PrimaryButton}" Width="200" Height="40" FontSize="14"/>
                                </Grid>
                            </Border>
                        </Grid>
                    </Grid>
                </Border>

                <!-- Processing Progress (Bottom) -->
                <Border Grid.Row="2" Style="{StaticResource CardBorder}" Margin="0,15,0,0" 
                        Visibility="{Binding IsTransferring, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="Processing Batch..." FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Text="{Binding CurrentStatus}" FontSize="12" Margin="0,0,0,5"/>
                        <ProgressBar Value="{Binding CurrentFileProgress}" Height="10" Margin="0,0,0,2"/>
                        <TextBlock Text="{Binding FileProgress}" FontSize="10" HorizontalAlignment="Right" Margin="0,0,0,10"/>
                        
                        <TextBlock Text="Overall Progress" FontSize="12" Margin="0,0,0,5"/>
                        <ProgressBar Value="{Binding TotalProgress}" Height="15" Foreground="{StaticResource PrimaryColor}"/>
                    </StackPanel>
                </Border>
            </Grid>

            <!-- Column 3: Processing Options & Queue -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Grid.Row="0" Style="{StaticResource CardBorder}" Margin="0,0,0,10">
                    <StackPanel>
                        <TextBlock Text="Processing Options" Style="{StaticResource HeaderBlock}"/>
                        
                        <TextBlock Text="Target Quality (Global)" FontSize="11" Foreground="{StaticResource MutedTextColor}" Margin="0,0,0,5"/>
                        <ComboBox ItemsSource="{Binding EncodingPresets}" SelectedItem="{Binding SelectedGlobalPreset}" 
                                  DisplayMemberPath="Name" Margin="0,0,0,10"/>

                        <CheckBox x:Name="HandbrakeCheck" Content="Optimize for Nomad (Transcode)" 
                                  IsEnabled="{Binding IsHandbrakeAvailable}" Margin="0,5" 
                                  IsChecked="{Binding IsTranscodingEnabled}"
                                  ToolTip="Convert videos to highly compatible MP4 format. Required for quality presets."/>
                        <CheckBox x:Name="AutoMoveCheck" Content="Auto-Move to USB Drive" 
                                  IsChecked="True" Margin="0,5"
                                  ToolTip="Automatically move processed files to the selected USB drive folders."/>
                        <CheckBox Content="Delete Source After Success" IsChecked="{Binding DeleteSourceAfterTransfer}" 
                                  Margin="0,5" ToolTip="Danger: Deletes the original file from your computer after it has been successfully copied/transcoded to the drive."/>
                        
                        <TextBlock Text="Select Files Manually" Margin="0,10,0,5" FontSize="11" Foreground="{StaticResource MutedTextColor}"/>
                        <UniformGrid Columns="2">
                            <Button Content="Files" Click="SelectFiles_Click" Margin="0,0,2,0" Padding="5"/>
                            <Button Content="Folder" Click="SelectFolder_Click" Margin="2,0,0,0" Padding="5"/>
                        </UniformGrid>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Style="{StaticResource CardBorder}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Text="Transcode Queue" Style="{StaticResource HeaderBlock}"/>

                        <ListBox Grid.Row="1" x:Name="QueueList" ItemsSource="{Binding TranscodeQueue}" 
                                 ItemContainerStyle="{StaticResource QueueItemStyle}" BorderThickness="0" Background="Transparent">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#252525" CornerRadius="6" Padding="12,8" Margin="0,0,0,6">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="ðŸŽ¬" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                            <TextBlock Grid.Column="1" Text="{Binding}" FontSize="12" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <Border Grid.Row="2" Background="#2A2A2A" CornerRadius="4" Padding="10,5" Margin="0,10,0,0">
                            <TextBlock Text="{Binding TranscodeQueue.Count, StringFormat='Pending: {0} items'}" 
                                       HorizontalAlignment="Center" FontSize="12" FontWeight="SemiBold"/>
                        </Border>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <!-- Footer / Progress Section -->
        <Border Grid.Row="2" Margin="0,20,0,0" Background="{StaticResource CardColor}" CornerRadius="12" Padding="20,15">
            <StackPanel>
                <!-- Progress UI (Only visible when transferring) -->
                <Grid Visibility="{Binding IsTransferring, Converter={StaticResource BoolToVis}}" Margin="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Margin="0,0,0,8">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Status:" FontWeight="SemiBold" Margin="0,0,10,0" Foreground="{StaticResource PrimaryColor}"/>
                            <TextBlock x:Name="StatusText" Text="{Binding CurrentStatus}" FontWeight="Bold"/>
                        </StackPanel>
                        <TextBlock x:Name="SpeedText" Text="{Binding TransferSpeed}" HorizontalAlignment="Right" Foreground="{StaticResource SecondaryColor}" FontWeight="SemiBold"/>
                    </Grid>

                    <StackPanel Grid.Row="1" Margin="0,5">
                        <ProgressBar x:Name="FileProgressBar" Height="6" Value="{Binding CurrentFileProgress}" 
                                     Background="#1A1A1A" Foreground="{StaticResource SecondaryColor}" BorderThickness="0" Margin="0,0,0,4"/>
                        <ProgressBar x:Name="MainProgress" Height="14" Value="{Binding TotalProgress}" 
                                     Background="#1A1A1A" Foreground="{StaticResource PrimaryColor}" BorderThickness="0"/>
                    </StackPanel>

                    <TextBlock Grid.Row="2" x:Name="FileProgressText" Text="{Binding FileProgress}" FontSize="11" Foreground="{StaticResource MutedTextColor}" Margin="0,4,0,0"/>
                </Grid>

                <!-- System Status -->
                <Grid>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="System Status:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12" Foreground="{StaticResource MutedTextColor}"/>
                        <TextBlock Text="{Binding AppStatus}" VerticalAlignment="Center" FontSize="12" FontWeight="Medium"/>
                    </StackPanel>
                    <TextBlock Text="{Binding AppStatus}" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="11" Foreground="#444"/>
                </Grid>
            </StackPanel>
        </Border>
    </Grid>
</Window>
